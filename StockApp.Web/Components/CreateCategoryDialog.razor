@inherits CreateCategoryDialogBase

<EditForm Model="Model" OnValidSubmit="OnValidSubmitAsync">
    <MudDialog>
        <DialogContent>
            <MudTextField Label="Nome da Categoria" @bind-Value="Model.Title" Required="true" MaxLength="80"/>
            <MudTextField Label="Descrição" @bind-Value="Model.Description" Required="true" MaxLength="500"/>
        </DialogContent>
        <DialogActions>
            <MudButton OnClick="Cancel">Cancelar</MudButton>
            <MudButton ButtonType="ButtonType.Submit" Color="Color.Primary">Salvar</MudButton>
        </DialogActions>
    </MudDialog>
</EditForm>

