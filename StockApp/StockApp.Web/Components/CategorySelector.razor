@inherits CategorySelectorPage

<MudSelect T="long"
           Label="Categoria"
           Value="Value"
           ValueChanged="OnValueChanged"
           ValueExpression="ValueExpression">
    <MudSelectItem Disabled="true" Value="0L">Selecione uma categoria</MudSelectItem>

    @foreach (var category in Categories)
    {
        <MudSelectItem Value="@category.Id">@category.Title</MudSelectItem>
    }
</MudSelect>

