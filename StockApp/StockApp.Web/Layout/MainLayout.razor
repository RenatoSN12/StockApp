@using System.Security.Claims
@inherits LayoutComponentBase

<MudThemeProvider Theme="Configuration.Theme"/>
<MudPopoverProvider/>
<MudDialogProvider/>
<MudSnackbarProvider/>

<AuthorizeView>
    <Authorized>
        <MudLayout>
            <MudAppBar>
                <MudIconButton
                    Icon="@Icons.Material.Filled.Menu"
                    Color="Color.Inherit"
                    Edge="Edge.Start"
                    OnClick="ToggleDrawer"/>
                <MudSpacer/>
                <div class="d-flex justify-center align-center mr-4">
                    <MudIcon
                        Icon="@Icons.Material.Outlined.AccountCircle"
                        Size="Size.Large"
                        class="mr-2"/>
                    <MudText Typo="Typo.subtitle1">
                        @context.User.FindFirst(x => x.Type == ClaimTypes.Name)!.Value
                    </MudText>
                </div>
            </MudAppBar>
            <MudDrawer Anchor="Anchor.Left" Variant="DrawerVariant.Responsive" @bind-Open="_isDrawerOpened">
                <NavMenu/>
            </MudDrawer>
            <MudMainContent>
                <MudContainer Class="mt-4">
                    @Body
                </MudContainer>
            </MudMainContent>
        </MudLayout>
    </Authorized>
    <NotAuthorized>
        <LoginRedirect/>
    </NotAuthorized>
</AuthorizeView>


@code {

    private bool _isDrawerOpened = true;

    private void ToggleDrawer()
        => _isDrawerOpened = !_isDrawerOpened;

}