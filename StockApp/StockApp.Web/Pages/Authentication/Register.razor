@page "/register"
@layout HeadlessLayout
@inherits RegisterPage

<PageTitle>Stock - Registro</PageTitle>

<MudGrid Justify="Justify.Center" AlignItems="AlignItems.Center" Style="height: 100vh;">
    <MudItem xs="12" sm="10" md="8" lg="6">
        <MudPaper Class="pa-8" Elevation="5">
            <div class="d-flex justify-center mb-6">
                <MudImage Src="imgs/logo.png" Width="200"></MudImage>
            </div>
            <EditForm Model="@InputModel" OnValidSubmit="OnValidSubmitAsync">
                <DataAnnotationsValidator/>
                <MudTextField
                    T="string"
                    Label="E-mail"
                    HelperText="Campo obrigatório"
                    InputType="InputType.Email"
                    MaxLength="80"
                    For="@(() => InputModel.Email)"
                    @bind-Value="InputModel.Email"
                    Class="mb-4"/>

                <MudTextField
                    T="string"
                    Label="Primeiro Nome"
                    HelperText="Campo obrigatório"
                    InputType="InputType.Text"
                    MaxLength="30"
                    For="@(() => InputModel.FirstName)"
                    @bind-Value="InputModel.FirstName"
                    Class="mb-4"/>
                
                <MudTextField
                    T="string"
                    Label="Sobrenome"
                    MaxLength="30"
                    HelperText="Campo obrigatório"
                    InputType="InputType.Text"
                    For="@(() => InputModel.LastName)"
                    @bind-Value="InputModel.LastName"
                    Class="mb-4"/>

                <MudTextField
                    T="string"
                    Label="Senha"
                    InputType="@PasswordInput"
                    For="@(() => InputModel.Password)"
                    @bind-Value="InputModel.Password"
                    Adornment="Adornment.End"
                    AdornmentIcon="@PasswordInputIcon"
                    OnAdornmentClick="OnShowPasswordButtonClick"
                    AdornmentAriaLabel="Ver senha"
                    Class="mb-4"/>

                <MudTextField
                    T="string"
                    Label="Senha (Confirmação)"
                    InputType="@ConfirmPasswordInput"
                    For="@(() => InputModel.ConfirmPassword)"
                    @bind-Value="InputModel.ConfirmPassword"
                    Adornment="Adornment.End"
                    AdornmentIcon="@ConfirmPasswordInputIcon"
                    OnAdornmentClick="OnShowConfirmPasswordButtonClick"
                    AdornmentAriaLabel="Ver senha"
                    Class="mb-4"/>

                <div class="d-flex mt-8">
                    @if (IsBusy)
                    {
                        <MudProgressCircular Color="Color.Info" Indeterminate="true"/>
                    }
                    else
                    {
                        <MudButton ButtonType="ButtonType.Submit" Variant="Variant.Filled" Color="Color.Primary">Entrar</MudButton>
                        <MudSpacer/>
                        <MudButton Href="/login">Já possuo uma conta</MudButton>
                    }
                </div>
            </EditForm>
        </MudPaper>
    </MudItem>
</MudGrid>